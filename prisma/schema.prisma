generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id               String         @id @default(cuid())
  name             String?
  email            String?        @unique
  emailVerified    DateTime?
  image            String?
  role             UserRole       @default(USER)
  stripeCustomerId String?        @unique
  accounts         Account[]
  sessions         Session[]
  articles         Article[]
  events           Event[]
  lectures         Lecture[]
  presentations    Presentation[]
  tickets          Ticket[]
  subscription      Subscription?
  favorites         Favorite[]
  userNotifications UserNotification[]
  comments         Comment[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  EXPIRED
}

model Subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique
  user                 User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeSubscriptionId String             @unique
  stripePriceId        String
  status               SubscriptionStatus @default(ACTIVE)
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  cancelAtPeriodEnd    Boolean            @default(false)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  @@map("subscriptions")
}

model Article {
  id             String            @id @default(cuid())
  title          String
  subtitle       String?
  slug           String?           @unique
  content        String
  articleImage   String?
  publisherName  String
  publisherImage String?
  readDuration   Int               @default(5)
  published      Boolean           @default(false)
  isPremium      Boolean           @default(false)
  isFeatured     Boolean           @default(false)
  order          Int               @default(0)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  direction      String            @default("ltr")
  authorId       String
  categoryId     String?
  embedding      Float[]
  embeddingModel String?
  authors        ArticleAuthor[]
  categories     ArticleCategory[]
  tags           ArticleTag[]
  comments       Comment[]
  author         User              @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category       Category?         @relation(fields: [categoryId], references: [id])

  @@map("articles")
}

model ArticleCategory {
  id         String   @id @default(cuid())
  articleId  String
  categoryId String
  createdAt  DateTime @default(now())
  article    Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  category   Category @relation("ArticleCategories", fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([articleId, categoryId])
  @@map("article_categories")
}

model ArticleAuthor {
  id        String   @id @default(cuid())
  name      String
  imageUrl  String?
  order     Int      @default(0)
  articleId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@map("article_authors")
}

model Tag {
  id        String       @id @default(cuid())
  name      String       @unique
  slug      String       @unique
  color     String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  articles  ArticleTag[]

  @@map("tags")
}

model ArticleTag {
  id        String   @id @default(cuid())
  articleId String
  tagId     String
  createdAt DateTime @default(now())
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([articleId, tagId])
  @@map("article_tags")
}

model Category {
  id                String            @id @default(cuid())
  name              String
  description       String?
  bannerImageUrl    String?
  parentId          String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  articleCategories ArticleCategory[] @relation("ArticleCategories")
  articles          Article[]
  parent            Category?         @relation("CategoryHierarchy", fields: [parentId], references: [id])
  subcategories     Category[]        @relation("CategoryHierarchy")
  events            Event[]
  lectures          Lecture[]
  presentations     Presentation[]

  @@map("categories")
}

model Lecture {
  id             String   @id @default(cuid())
  title          String
  description    String
  videoUrl       String?
  duration       String
  date           String?
  bannerImageUrl String?
  isPremium      Boolean  @default(false)
  categoryId     String
  authorId       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  author         User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category       Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("lectures")
}

model Presentation {
  id              String   @id @default(cuid())
  title           String
  description     String
  content         String
  googleSlidesUrl String?
  imageUrls       String[]
  published       Boolean  @default(true)
  isPremium       Boolean  @default(false)
  categoryId      String
  authorId        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  pdfUrl          String?
  author          User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category        Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("presentations")
}

model Event {
  id             String   @id @default(cuid())
  title          String
  description    String
  eventType      String
  location       String?
  onlineUrl      String?
  eventDate      DateTime
  eventTime      String?
  bannerImageUrl String?
  maxSeats       Int?
  price          Int?     // Price in agorot (cents), null = free event
  currency       String   @default("ILS")
  published      Boolean  @default(false)
  isFeatured     Boolean  @default(false)
  isClosed       Boolean  @default(false) // Manually close registration
  categoryId     String
  authorId       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  author         User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category       Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  tickets        Ticket[]

  @@map("events")
}

model Ticket {
  id              String       @id @default(cuid())
  eventId         String
  userId          String?      // Link to registered user (optional for guest checkout)
  holderName      String
  holderEmail     String
  holderPhone     String?
  numberOfSeats   Int          @default(1)
  status          TicketStatus @default(PENDING)
  paymentId       String?      // Stripe Payment Intent ID
  paymentStatus   String?      // succeeded, pending, failed
  stripeSessionId String?      // Stripe Checkout Session ID
  accessToken     String       @unique @default(cuid())
  notes           String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  event           Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user            User?        @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("tickets")
}

model Message {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("messages")
}

model HomeContent {
  id            String   @id @default("home")
  heroHtml      String?  // Legacy field - kept for backwards compatibility
  heroHtmlLeft  String?  // Left column (English/LTR content)
  heroHtmlRight String?  // Right column (Hebrew/RTL content)
  imageUrl      String?
  photoCredit   String?
  bioHtml       String
  updatedAt     DateTime @updatedAt

  @@map("home_content")
}

model SiteSettings {
  id              String   @id @default("settings")
  siteTitle       String   @default("Avshalom Elitzur")
  siteDescription String   @default("")
  contactEmail    String   @default("")
  contactPhone    String   @default("")
  facebookUrl     String   @default("")
  youtubeUrl      String   @default("")
  defaultLanguage String   @default("he")
  updatedAt       DateTime @updatedAt

  @@map("site_settings")
}

model AboutPage {
  id          String   @id @default("about")
  titleEn     String   @default("About")
  titleHe     String   @default("אודות")
  contentEn   String?  // English content (HTML)
  contentHe   String?  // Hebrew content (HTML)
  imageUrl    String?
  published   Boolean  @default(false)
  updatedAt   DateTime @updatedAt

  @@map("about_page")
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum TicketStatus {
  PENDING
  CONFIRMED
  CANCELLED
  ATTENDED
}

enum FavoriteType {
  ARTICLE
  LECTURE
  PRESENTATION
}

model Favorite {
  id        String       @id @default(cuid())
  userId    String
  itemId    String       // ID of the article, lecture, or presentation
  itemType  FavoriteType
  createdAt DateTime     @default(now())
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, itemId, itemType]) // Prevent duplicate favorites
  @@index([userId, itemType])          // Fast lookup by user and type
  @@map("favorites")
}

model Notification {
  id        String   @id @default(cuid())
  title     String
  message   String
  imageUrl  String?
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userNotifications UserNotification[]

  @@map("notifications")
}

model UserNotification {
  id             String       @id @default(cuid())
  userId         String
  notificationId String
  isRead         Boolean      @default(false)
  readAt         DateTime?
  createdAt      DateTime     @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  notification Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)

  @@unique([userId, notificationId])
  @@index([userId, isRead])
  @@map("user_notifications")
}

enum ArchiveMediaType {
  NONE
  IMAGE
  VIDEO
}

model Archive {
  id        String           @id @default(cuid())
  title     String
  content   String           // HTML content from TipTap editor
  mediaUrl  String?          // Vercel Blob image URL or YouTube URL
  mediaType ArchiveMediaType @default(NONE)
  order     Int              @default(0)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@map("archives")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  articleId String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([articleId, createdAt])
  @@index([userId])
  @@map("comments")
}
